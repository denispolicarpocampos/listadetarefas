<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default"> 
      <div class="panel-heading">
        <p>Digite título, descrição, data e hora da tarefa</p>
      </div>
      <div class="panel-body">
        <%= form_for @tarefa do |f| %>
          <%= render 'shared/error_messages_tarefa' %>
          <%= f.label "Título" %>
          <%= f.text_field :titulo, class: "form-control" %>
          <%= f.label "Descrição" %>
          <%= f.text_area :descricao, rows: "5", class: "form-control" %>
          <%= f.label "Data" %>
          <%= f.datetime_field :data, min: DateTime.now, class: "form-control"  %>
          <%= f.button :submit, class: "btn btn-primary btn-lg btn-block" %> 
        <% end %>
        <div id="voltar">  
          <%= link_to 'Voltar', tarefas_path %>
        </div>
      </div>
    </div>
  </div>
</div>
