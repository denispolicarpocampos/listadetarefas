<h1>Tarefas Completas</h1>
<div id="botoes">
<%= link_to 'Tarefas Pendentes', tarefas_path, class: "btn btn-primary btn-lg" %>
</div>
<div class="row">
  <table id="myTable", class="table table-hover text-center">
    <tr>
      <th class=" text-center">Titulo</th>
      <th class=" text-center">Descrição</th>
      <th class=" text-center">Tarefa iniciada em:</th>
      <th class=" text-center">Tarefa completada em:</th>
      <th class=" text-center">Continuar Tarefa</th>
      <th colspan="3"></th>
    </tr>
    <% @tarefas.each do |tarefa| %>
      <% if tarefa.complete? %>
        <tr>
          <td><%= tarefa.titulo.truncate(30) %></td> 
          <td><%= tarefa.descricao.truncate(50) %></td>
          <td><%= tarefa.data.strftime("%d/%m/%Y às %H:%M") %></td>
          <td><%= tarefa.data_complete.strftime("%d/%m/%Y às %H:%M")  %></td>
          <td><%= link_to "Completar Tarefa", edit_complete_task_tarefa_path(tarefa), remote: true, class: "btn btn-success", remote: true %></td>
          <td><%= link_to 'Mostrar', tarefa_path(tarefa), class: "btn btn-default" %></td>
          <td><%= link_to 'Apagar', tarefa_path(tarefa), method: :delete, data: { confirm: 'Tem certeza?'}, class: "btn btn-default" %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>

