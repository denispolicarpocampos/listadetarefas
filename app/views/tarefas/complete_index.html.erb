<div class="row container-fluid">
<br><br><br><br>
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-info "> 
      <div class="panel-heading">
      <h3>Tarefas Completas</h3>
      </div>
        <div class="panel-body"> 
          <%= link_to 'Tarefas Pendentes', tarefas_path, class: "btn btn-default btn-lg btn-lg active" %>
        </div>
        <div class="table table-responsive">
          <table id="myTable", class="table table-bordered text-center">
            <tr>
              <th class=" text-center">Titulo</th>
              <th class=" text-center">Descrição</th>
              <th class=" text-center">Data e Hora</th>
              <th class=" text-center">Continuar Tarefa</th>
              <th colspan="3"></th>
            </tr>

            <% @tarefa.each do |tarefa| %>
              <% if tarefa.complete? %>
                <tr>
                  <td><%= tarefa.titulo %></td> 
                  <td><%= tarefa.descricao %></td> 
                  <td><%= tarefa.data %></td>
                  <td><%= link_to 'Continuar Tarefa', incomplete_task_tarefa_path(tarefa), class: "btn btn-success ", remote: true , onclick:"deleteRow(this)" %></td>
                  <td><%= link_to 'Mostrar', tarefa_path(tarefa), class: "btn btn-default" %></td>
                  <td><%= link_to 'Apagar', tarefa_path(tarefa), method: :delete, data: { confirm: 'Tem certeza?'}, class: "btn btn-default" %></td>
                  </tr>
              <% end %>
            <% end %>
          </table>
          <script>
            function deleteRow(r) {
              var i = r.parentNode.parentNode.rowIndex;
              document.getElementById("myTable").deleteRow(i);
              }
            </script>
        </div>
    </div>
  </div>
</div>