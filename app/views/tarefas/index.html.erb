<h1>Lista de tarefas</h1>
<%= link_to 'Nova Tarefa', new_tarefa_path %> 
 

<table>
  <tr>
    <th>Titulo</th>
    <th>Descrição</th>
    <th>Data</th>
    <th colspan="4"></th>
  </tr>
 
  <% @tarefa.each do |tarefa| %>
    <tr>
      <td><%= tarefa.titulo %></td> 
      <td><%= tarefa.descricao %></td> 
      <td><%= tarefa.data %></td>
      <td><%= link_to 'Mostrar', tarefa_path(tarefa) %></td>
      <td><%= link_to 'Editar', edit_tarefa_path(tarefa) %></td>
      <td><%= link_to 'Apagar', tarefa_path(tarefa), method: :delete, data: { confirm: 'Tem certeza?'} %></td>
    </tr>
  <% end %>
</table>