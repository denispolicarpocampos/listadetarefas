<!DOCTYPE html>
<html>
  <head>
    <title>Lista de tarefas</title>
    <%= csrf_meta_tags %> 
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %> 
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body> 
    <header class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid" id="navbar">
        <%= link_to "Sistema de Tarefas", '/', id: "logo" %>
        <button class="navbar-toggle" type="button" data-target=".navbar-collapse" data-toggle="collapse"><span class="glyphicon glyphicon-align-justify"></span></button>
        <nav>
          <ul class="nav navbar-nav collapse navbar-collapse navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to "Sair", destroy_user_session_path, :method => :delete %></li>
            <% else %>
              <li><%= link_to "Cadastre-se", new_user_registration_path %></li>
              <li><%= link_to "Log In", new_user_session_path %></li>
            <%end%> 
          </ul>
        </nav>
      </div>
    </header>            
    <div class="container-fluid">
    <%= yield %>  
  </body>
</html>
